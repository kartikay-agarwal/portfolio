{
  "version": 2,
  "routes": [
    { "handle": "filesystem" },
    { "src": "/pomo(?:/)?$", "dest": "/pomo/index.html" },
    { "src": "/pomo/(.*)", "dest": "/pomo/$1" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)\\.(js|css|png|jpg|jpeg|svg|webp|woff2)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
