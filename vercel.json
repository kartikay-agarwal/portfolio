{
  "version": 2,
  "builds": [
    {
      "src": "ndmm/frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "ndmm/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/ndmm/api/(.*)", "dest": "/ndmm/api/$1.js" },

    { "src": "/ndmm/(.*)", "dest": "/ndmm/frontend/build/$1" },

    { "src": "/:folder(pomo|kartikay|hooman|olaf)$", "dest": "/:folder/index.html" },
    { "src": "/:folder(pomo|kartikay|hooman|olaf)/:path*", "dest": "/:folder/:path*" },

    { "src": "/(.*\\.(js|css|png|jpg|jpeg|svg|webp|woff2|woff|ttf))", "dest": "/$1" },

    { "src": "/(.*)", "dest": "/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)\\.(js|css|png|jpg|jpeg|svg|webp|woff2|woff|ttf)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
